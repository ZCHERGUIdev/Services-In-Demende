<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.AppCompat.DayNight.NoActionBar"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/signincontent"
    android:background="@android:color/white"
    tools:context=".Fragments.SignInActivityFragment">

    <FrameLayout
        android:id="@+id/contentFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="55dp"
        android:paddingBottom="24dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/Logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/logoo" />

        <EditText
            android:id="@+id/edtUserName"
            style="@style/EditTextStyle"
            android:background="@drawable/background_circle"
            android:layout_width="match_parent"
            android:backgroundTint="#F1F1F1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="8dp"
            android:hint="User Name"
            android:inputType="textEmailAddress"
            android:singleLine="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_circle"
            android:backgroundTint="#F1F1F1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="18dp"

         >
            <EditText
                android:id="@+id/edtPassword"
                style="@style/EditTextStyle"
                android:background="@drawable/background_circle"
                android:backgroundTint="#F1F1F1"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/tvForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvForget"
                style="@style/EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:text="Forgot ?"
                android:textStyle="bold"
                android:textColor="@color/blueCiel"
                android:textSize="18dp"
                android:theme="@style/Widget.MaterialComponents.Button.TextButton"
                 />
        </RelativeLayout>
        <Button
            android:id="@+id/sign_IN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_circle"
            android:backgroundTint="#127B95"
            android:textColor="@color/blueDarker"
            android:layout_marginTop="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Sing In"/>
        <Button
            android:id="@+id/SignUpp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_circle"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/blueDarker"
            android:layout_marginEnd="8dp"
            android:text="Sign Up"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:text="Sign In With"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/darker_gray"
            android:textSize="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp">
        <ImageView
            android:id="@+id/ivFaceBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:backgroundTint="#343B9D"
            android:src="@drawable/facebookvictor"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="Facebook"
            android:drawablePadding="10dp"
            android:textStyle="bold"

            />
        <ImageView
            android:id="@+id/ivGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#CB3634"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_google"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="Google"
            android:drawablePadding="10dp"
            android:textStyle="bold"/>

    </LinearLayout>
    </LinearLayout>
</ScrollView>
    </FrameLayout>
</RelativeLayout>